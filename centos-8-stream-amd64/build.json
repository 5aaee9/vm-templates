{
    "variables": {
        "disk_size": "8192M",
        "kickstart": "kickstart.cfg",
        "headless": "false"
    },
    "provisioners": [{
        "type": "shell",
        "scripts": [
            "scripts/00-base.sh",
            "scripts/01-config.sh",
            "scripts/98-cleanup.sh"
        ]
    }],
    "builders": [{
        "name": "centos-8-stream-amd64",
        "type": "qemu",
        "accelerator": "kvm",

        "format": "qcow2",
        "disk_size": "{{ user `disk_size`}}",
        "disk_compression": true,
        "memory": 2048,
        "headless": "{{ user `headless` }}",

        "iso_urls": [
            "../isos/{{ user `iso_name` }}"
        ],
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "sha256",

        "ssh_username": "root",
        "ssh_password": "packer",
        "ssh_wait_timeout": "90m",
        "http_directory": "http",
        "shutdown_command": "shutdown -P now",

        "boot_wait": "2s",
        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `kickstart` }}<enter>"
        ],
        "qemuargs": [
            ["-fda", "cloud.img"],
            ["-serial", "mon:stdio"]
        ]
    }]
}
